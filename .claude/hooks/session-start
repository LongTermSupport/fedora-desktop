#!/usr/bin/env python3
"""SessionStart hook entry point - routes to front controller.

Runs when Claude Code starts a new session or resumes an existing one. Useful for
loading development context, installing dependencies, or setting up environment variables.

Official docs: https://code.claude.com/docs/en/hooks.md#sessionstart
"""
import sys
import os
sys.path.insert(0, os.path.join(os.path.dirname(__file__), 'controller'))
from session_start import main
sys.exit(main())
