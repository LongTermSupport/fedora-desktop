#!/usr/bin/env python3
"""PostToolUse hook entry point - routes to front controller.

Runs immediately after a tool completes successfully. Provides feedback to Claude
after tool execution.

Official docs: https://code.claude.com/docs/en/hooks.md#posttooluse
"""
import sys
import os
sys.path.insert(0, os.path.join(os.path.dirname(__file__), 'controller'))
from post_tool_use import main
sys.exit(main())
