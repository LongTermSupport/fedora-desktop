<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.speech-to-text" path="/org/gnome/shell/extensions/speech-to-text/">
    <key name="toggle-recording" type="as">
      <default><![CDATA[['Insert']]]></default>
      <summary>Toggle Recording</summary>
      <description>Keybinding to toggle speech-to-text recording</description>
    </key>
    <key name="debug-mode" type="b">
      <default>false</default>
      <summary>Debug Mode</summary>
      <description>Enable verbose logging to ~/.local/share/speech-to-text/debug.log</description>
    </key>
    <key name="clipboard-mode" type="b">
      <default>false</default>
      <summary>Clipboard Mode</summary>
      <description>Use CLIPBOARD (Ctrl+V) instead of PRIMARY selection (middle-click)</description>
    </key>
    <key name="auto-paste" type="b">
      <default>false</default>
      <summary>Auto Paste</summary>
      <description>Automatically type the transcribed text at cursor position</description>
    </key>
    <key name="wrap-marker" type="b">
      <default>false</default>
      <summary>Wrap with Speech-to-Text Marker</summary>
      <description>Wrap transcribed text with speech-to-text:"..." to provide context to LLMs</description>
    </key>
    <key name="auto-enter" type="b">
      <default>true</default>
      <summary>Auto Enter After Paste</summary>
      <description>Send Return/Enter key after auto-pasting (requires auto-paste to be enabled)</description>
    </key>
  </schema>
</schemalist>
