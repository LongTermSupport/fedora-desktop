<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.speech-to-text" path="/org/gnome/shell/extensions/speech-to-text/">
    <key name="toggle-recording" type="as">
      <default><![CDATA[['Insert']]]></default>
      <summary>Toggle Recording</summary>
      <description>Keybinding to toggle speech-to-text recording</description>
    </key>
    <key name="debug-mode" type="b">
      <default>false</default>
      <summary>Debug Mode</summary>
      <description>Enable verbose logging to ~/.local/share/speech-to-text/debug.log</description>
    </key>
  </schema>
</schemalist>
